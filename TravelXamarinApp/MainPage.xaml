<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelXamarinApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <StackLayout Spacing="10" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                <Label Text="Welcome to Travel App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                <Entry Placeholder="Enter Email Id" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
                <Entry Placeholder="Enter Password"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                <Button Text="Submit" BackgroundColor="AliceBlue" TextColor="White" CornerRadius="2"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
